#include<stdio.h>
int main()
{
float a,b,c;
int fu;
printf("The first number:");
scanf("%f",&a);
printf("The algorithm(1.+ 2.- 3.* 4./):");
scanf("%d",&fu);
printf("The second number:");
scanf("%f",&b);
switch(fu)
{
case 1:c=a+b;printf("The result is:%5.2f",c);break;
case 2:c=a-b;printf("The result is:%5.2f",c);break;
case 3:c=a*b;printf("The result is:%5.2f",c);break;
case 4:c=a/b;printf("The result is:%5.2f",c);break;

default:printf("error\n");break;
}

}
